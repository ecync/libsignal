{
  "name": "@ecync/libsignal",
  "version": "1.0.2",
  "description": "End-to-end encryption primitives implementing a Signal-style double ratchet with PreKeys for Node.js",
  "keywords": [
    "signal",
    "whispersystems",
    "crypto",
    "encryption",
    "double-ratchet",
    "prekeys",
    "e2e"
  ],
  "license": "GPL-3.0",
  "author": "Eshan Chathuranga",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecync/libsignal.git"
  },
  "homepage": "https://github.com/ecync/libsignal",
  "bugs": {
    "url": "https://github.com/ecync/libsignal/issues"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "src/",
    "protos/",
    "README.md",
    "example.js"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "proto:generate": "pbjs -t static-module -w commonjs -o ./src/WhisperTextProtocol.js ./protos/WhisperTextProtocol.proto",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepublishOnly": "echo 'Ready to publish'",
    "publish:patch": "npm run version:patch && npm publish",
    "publish:minor": "npm run version:minor && npm publish",
    "publish:major": "npm run version:major && npm publish"
  },
  "dependencies": {
    "curve25519-js": "^0.0.4",
    "protobufjs": "^7.5.4"
  },
  "devDependencies": {
    "eslint": "^9.36.0"
  }
}
